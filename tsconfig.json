{
  "compilerOptions": {
    // We don't care about this since Parcel runs Babel after TypeScript
    "baseUrl": ".",
    "target": "esnext",
    "paths": {
      "teact/*": ["src/lib/teact/*"],
      "teact-dom": ["teact/teact-dom"],
//      "react": ["teact/teact"],
//      "react-dom": ["teact/teact-dom"],
    },
    "lib": [
      "dom",
      "webworker",
      "es7"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react"
  },
  "include": [
    "src"
  ]
}
